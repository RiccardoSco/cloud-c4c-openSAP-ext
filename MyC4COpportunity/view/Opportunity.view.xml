<mvc:View
	controllerName="view.Opportunity"
	xmlns:core="sap.ui.core"
	xmlns:c="sap.ui.commons"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:t="sap.ui.table"
	xmlns:f="sap.ui.layout.form"
	xmlns="sap.m">
	<Page showNavButton="false"
		  showHeader="false"
		  enableScrolling="true"
		  class="sapUiResponsiveContentPadding">
		<content>
			<t:Table id="opportunitiesList"
				rows="{
					path: '/OpportunityCollection'
				}"
				selectionBehavior="RowOnly"
				rowSelectionChange="onListItemPress"
				title="Opportunities"
				visibleRowCount="7"
				navigationMode="Paginator">
				<t:columns>
					<t:Column>
						<Label text="ID"/>
						<t:template>
							<c:TextView text="{OpportunityID}" />
						</t:template>
					</t:Column>
					<t:Column>
						<Label text="Name"/>
						<t:template>
							<c:TextView text="{Name/content}" />
						</t:template>
					</t:Column>					
					<t:Column>
						<Label text="Account"/>
						<t:template>
							<c:TextView text="{AccountName/content}" />
						</t:template>
					</t:Column>
					<t:Column>
						<Label text="Probability"/>
						<t:template>
							<c:TextView text="{ProbabilityPercent} %" />
						</t:template>
					</t:Column>
				</t:columns>
			</t:Table>
			<f:SimpleForm id="opportunityDetails" editable="false"
						  title="Opportunity Details" class="sapUiSmallMarginTop">
				<f:content>
					<c:Label text="ID" />
					<c:TextView text="{OpportunityID}" />
					<c:Label text="Name" />
					<c:TextView text="{Name/content}" />
					<c:Label text="Account" />
					<c:TextView text="{AccountName/content}" />
					<c:Label text="Probability" />
					<c:TextView text="{ProbabilityPercent}" />
					<c:Label text="Risk" />
					<c:TextView id="riskAssessmentTextField" text="{riskModel>/RiskAssessment}" />
				</f:content>
			</f:SimpleForm>
		</content>
	</Page> 
</mvc:View>